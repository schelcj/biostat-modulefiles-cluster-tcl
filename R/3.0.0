#%Module1.0
source /home/software/lucid/Modules/modulefiles/modules.tcl
source /home/software/lucid/Modules/modulefiles/R/R.tcl

set app     R
set version 3.0.0
set modroot /home/software/lucid/$app/$version

conflict R

prepend-path PATH               $modroot/bin
prepend-path MANPATH            $modroot/share/man
prepend-path LD_LIBRARY_PATH    $modroot/lib64/R/lib
prepend-path LIBRARY_PATH       $modroot/lib64/R/lib
prepend-path C_INCLUDE_PATH     $modroot/lib64/R/include
prepend-path CPLUS_INCLUDE_PATH $modroot/lib64/R/include

setenv R_LIBS $modroot/site-library
